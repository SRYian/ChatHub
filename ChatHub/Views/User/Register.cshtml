
@{
    ViewData["Title"] = "Register";
}

<div class="h-100 w-100 d-flex flex-column justify-content-center align-items-center">
    <form class="bg-col-secondary p-lg-5  rounded-lg" action="/User/RegisterForm" method="post">
        <h3 class="text-orange font-weight-bold text-center py-2">
            JOIN US!
        </h3>
        <div class="d-flex flex-column py-2">
            <label class="text-white" for="userid">Username</label><br>
            <input class="form-control rounded-lg" type="text" name="username" value="KOBOKAN"><br>
        </div>
        <div class="d-flex flex-column py-2">
            <label class="text-white" for="text">Password</label><br>
            <input class="form-control rounded-lg" type="text" name="password" value="test2"><br><br>
        </div>
        <button class="btn py-2 mt-3 w-100 orange-bg" type="submit" value="Submit">
            REGISTER
        </button>
    </form>
</div>
